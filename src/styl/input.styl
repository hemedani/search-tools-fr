.input-form  
  display: flex
  align-items: center
  flex-flow: row wrap
  &.break-inp
    margin-top: 2rem
input
textarea
select
  border: 1px solid goldenrod
  background-color: white
  &:focus
    background-color:#FFF5F0
    outline: none
  &:disabled
    background-color: rgba(136, 136, 136, 0.7)
.input-text
  width: 20rem
  height: 1.4rem
  padding: 0.5rem
  margin: 0.5rem 0
  &:first-child
    border-left: 0.3rem solid goldenrod
    border-top-left-radius: 0.5rem
    border-bottom-left-radius: 0.5rem